<Window x:Class="MyCity.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCity"
        mc:Ignorable="d" 
        Title="Map" Height="600" Width="1000" HorizontalContentAlignment="Right">

    <Grid>
        <Image x:Name="ImgMap" HorizontalAlignment="Left" VerticalAlignment="Top" Width="590" Stretch="Fill" Margin="10"/>
        <Label x:Name="LblPopulation" Content="Population: " Margin="610,10,288,534"/>
        <Label x:Name="LblHouses" Content="Houses count: " Margin="610,35,288,509"/>
        <DataGrid x:Name="PeopleGrid" Margin="610,65,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Name" HeaderStringFormat="Name"/>
            </DataGrid.Columns>
            <!--<DataGridColumnHeader Content="ID"/>
            <DataGridColumnHeader Content="Name"/>
            <DataGridColumnHeader Content="Surname"/>-->
        </DataGrid>
    </Grid>
</Window>
